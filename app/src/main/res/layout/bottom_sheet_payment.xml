<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#272727"
        android:padding="10dp">
        <TextView
            android:text="@string/complete_order"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15sp"
            android:background="@drawable/custom_edit_text4"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
           <RadioGroup
               android:id="@+id/group_ship"
               android:orientation="horizontal"
               android:checkedButton="@id/ship"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center_horizontal">
               <RadioButton
                   android:id="@+id/ship"
                   android:text="@string/Shipping"
                   android:paddingTop="10dp"
                   android:paddingBottom="5dp"
                   android:textColor="@drawable/text_selector"
                   android:drawableTop="@drawable/fooddelivery"
                   android:background="@drawable/selector_payment_method"
                   android:gravity="center_horizontal|bottom"
                   android:button="@drawable/null_radio_button"
                   android:layout_width="90dp"
                   android:layout_height="70dp"/>
               <View
                   android:background="@color/grey"
                   android:layout_width="1dp"
                   android:layout_marginStart="40dp"
                   android:layout_height="match_parent"/>
               <RadioButton
                   android:id="@+id/pickup"
                   android:text="@string/Pick_up_at_the_shop"
                   android:paddingTop="10dp"
                   android:layout_marginStart="40dp"
                   android:textColor="@drawable/text_selector"
                   android:paddingBottom="5dp"
                   android:drawableTop="@drawable/coffeeshop"
                   android:background="@drawable/selector_payment_method"
                   android:gravity="center_horizontal|bottom"
                   android:button="@drawable/null_radio_button"
                   android:layout_width="90dp"
                   android:layout_height="70dp"/>
           </RadioGroup>
        </LinearLayout>
        <EditText
            android:id="@+id/namePayment"
            android:hint="@string/fullname"
            android:textSize="17sp"
            android:textColorHint="@color/grey"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_edit_text4"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/phoneNumberPayment"
            android:hint="@string/phoneNumber"
            android:textSize="17sp"
            android:textColorHint="@color/grey"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:inputType="number"
            android:padding="10dp"
            android:background="@drawable/custom_edit_text4"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/addressPayment"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:textColorHint="@color/grey"
            android:textColor="@color/black"
            android:hint="@string/address_order"
            android:padding="10dp"
            android:background="@drawable/custom_edit_text4"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btCompletePayment"
            android:background="@drawable/button_custom2"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="@string/payment"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/select_shop"
        android:text="@string/select_shop"
        android:layout_marginTop="276dp"
        android:textColor="@color/grey"
        android:padding="10dp"
        android:textSize="17sp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_width="match_parent"
        android:background="@drawable/custom_edit_text4"
        android:layout_height="44dp"
        android:visibility="visible"
        app:drawableEndCompat="@drawable/ic_baseline_add_location_alt_24" />

</androidx.cardview.widget.CardView>