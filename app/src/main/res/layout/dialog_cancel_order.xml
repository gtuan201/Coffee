<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey">
        <TextView
            android:textColor="@color/white"
            android:background="@color/dark_grey"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="17sp"
            android:padding="10dp"
            android:text="@string/question_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/white"
            android:text="@string/reason_to_best"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_reason"
            android:textColorHint="@color/dark_grey"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:hint="Lý do hủy đơn hàng của bạn..."
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/custom_edit_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15sp"
            android:layout_marginHorizontal="10dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_no"
                android:text="Không"
                android:textColor="@color/white"
                android:background="@drawable/button_custom7"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_yes"
                android:text="Đồng ý"
                android:layout_marginStart="10dp"
                android:background="@drawable/button_custom5"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>