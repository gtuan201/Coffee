<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171717">
    <RelativeLayout
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15sp"
            android:text="@string/account"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:drawablePadding="5dp"
            app:drawableStartCompat="@drawable/account" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/dark_grey" />
    </RelativeLayout>
    <TextView
        android:text="Hỗ trợ"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12sp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/contact"
        android:text="Liên hệ và hỗ trợ"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:background="@drawable/custom_tv"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:layout_marginHorizontal="15sp"
        app:drawableStartCompat="@drawable/ic_baseline_comment_24"
        app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />
    <TextView
        android:id="@+id/version"
        android:text="Phiên bản"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:background="@drawable/custom_tv"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:layout_marginHorizontal="15sp"
        app:drawableStartCompat="@drawable/ic_baseline_app_settings_alt_24"
        app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />
    <TextView
        android:text="Tài khoản"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12sp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/information_user"
        android:text="Thông tin cá nhân"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:background="@drawable/custom_tv"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:layout_marginHorizontal="15sp"
        app:drawableStartCompat="@drawable/ic_baseline_person_24"
        app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />
    <TextView
        android:id="@+id/address_user"
        android:text="Địa chỉ nhận hàng"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:background="@drawable/custom_tv"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:layout_marginHorizontal="15sp"
        app:drawableStartCompat="@drawable/ic_baseline_location_on_24"
        app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />
    <TextView
        android:id="@+id/delete_account"
        android:text="Yêu cầu xóa tài khoản"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:background="@drawable/custom_tv"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:layout_marginHorizontal="15sp"
        app:drawableStartCompat="@drawable/ic_baseline_no_accounts_24"
        app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />
    <TextView
        android:id="@+id/log_out"
        android:text="Đăng xuất"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:textColor="@color/grey"
        android:background="@drawable/custom_tv"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:layout_marginHorizontal="15sp"
        app:drawableStartCompat="@drawable/ic_baseline_logout_24"
        app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />
</LinearLayout>